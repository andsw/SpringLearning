<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="car" class="cnjxufe.beans_autowire.Car">
        <property name="name" value="lexus"/>
        <property name="price" value="300000"/>
    </bean>

    <bean id="address" class="cnjxufe.beans_autowire.Address">
        <property name="city" value="Shanghai"/>
        <property name="street" value="Nanjing Street"/>
    </bean>

    <bean id="person" class="cnjxufe.beans_autowire.Person" p:name="zhangsan" autowire="byName"/>

    <bean id="person1" class="cnjxufe.beans_autowire.Person" p:name="lisi" autowire="byType"/>

</beans>